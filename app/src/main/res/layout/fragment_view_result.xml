<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_add_ui"
    tools:context=".view.ViewResultFragment">

    <LinearLayout
        android:id="@+id/ll_view_result_bar"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:weightSum="5">

        <Button
            android:textSize="15dp"
            android:background="#1976D2"
            android:id="@+id/bt_view_result_match"
            android:textColor="@android:color/black"
            android:enabled="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Match"
            android:layout_weight="1"/>

        <Button
            android:background="@color/colorAccent"
            android:id="@+id/bt_view_result_player_name_0"
            android:textColor="@android:color/black"
            android:enabled="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Player"
            android:layout_weight="1"/>

        <Button
            android:background="@color/colorAccent"
            android:id="@+id/bt_view_result_player_name_1"
            android:textColor="@android:color/black"
            android:enabled="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Player"
            android:layout_weight="1"/>

        <Button
            android:background="@color/colorAccent"
            android:id="@+id/bt_view_result_player_name_2"
            android:textColor="@android:color/black"
            android:enabled="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Player"
            android:layout_weight="1"/>

        <Button
            android:background="@color/colorAccent"
            android:id="@+id/bt_view_result_player_name_3"
            android:textColor="@android:color/black"
            android:enabled="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Player"
            android:layout_weight="1"/>
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_below="@+id/ll_view_result_bar"
        android:id="@+id/rv_view_result_items_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_view_result_add_score"
        android:layout_alignParentRight="true"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="40dp"
        android:src="@drawable/ic_baseline_add_24"
        android:layout_alignParentBottom="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</RelativeLayout>