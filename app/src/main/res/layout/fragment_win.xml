<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_add_ui"
    tools:context=".view.WinFragment">

    <TextView
        android:id="@+id/tv_win_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:text="Game over"
        android:textColor="@color/fui_bgEmail"
        android:textSize="40sp"
        android:textStyle="bold |italic" />

    <LinearLayout
        android:id="@+id/ll_win_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_margin="8dp"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_win_player_0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/background_win_layer_0"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_win_player_0"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Player 1"
                android:textAlignment="center"
                android:textColor="@android:color/holo_red_dark"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/tv_win_player_score_0"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="34"
                android:textAlignment="center"
                android:textColor="@android:color/holo_red_dark"
                android:textSize="30sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_win_player_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/background_win_layer_1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_win_player_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Player 2"
                android:textAlignment="center"
                android:textColor="@android:color/holo_orange_dark"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/tv_win_player_score_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="34"
                android:textAlignment="center"
                android:textColor="@android:color/holo_orange_dark"
                android:textSize="30sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_win_player_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/background_win_layer_2"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_win_player_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Player 3"
                android:textAlignment="center"
                android:textColor="@android:color/holo_orange_light"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/tv_win_player_score_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="34"
                android:textAlignment="center"
                android:textColor="@android:color/holo_orange_light"
                android:textSize="30sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_win_player_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/background_win_layer_3"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_win_player_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Player 4"
                android:textAlignment="center"
                android:textColor="@android:color/primary_text_dark"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/tv_win_player_score_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="34"
                android:textAlignment="center"
                android:textColor="@android:color/primary_text_dark"
                android:textSize="30sp" />

        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/bt_win_return_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_win_bar"
        android:layout_marginLeft="48dp"
        android:layout_marginTop="70dp"
        android:layout_marginRight="48dp"
        android:layout_weight="1"
        android:background="@drawable/btn_add_fr"
        android:text="Return main"
        android:textAllCaps="false"
        android:textColor="#FFF"
        android:textSize="22sp" />

</RelativeLayout>