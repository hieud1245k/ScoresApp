<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:background="@android:color/darker_gray"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:background="#1976D2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:background="@drawable/border_view_result_item"
                android:textSize="15dp"
                android:gravity="center"
                android:id="@+id/tv_match_score_history"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textAlignment="center"
                android:text="1." />

        </LinearLayout>

        <TextView
            android:background="@drawable/border_view_result_item"
            android:textSize="25dp"
            android:id="@+id/tv_score_history_player_score_0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAlignment="center"
            android:text="0" />

        <TextView
            android:background="@drawable/border_view_result_item"
            android:textSize="25dp"
            android:id="@+id/tv_score_history_player_score_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_weight="1"
            android:text="1" />

        <TextView
            android:background="@drawable/border_view_result_item"
            android:textSize="25dp"
            android:id="@+id/tv_score_history_player_score_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_weight="1"
            android:text="2" />

        <TextView
            android:background="@drawable/border_view_result_item"
            android:textSize="25dp"
            android:id="@+id/tv_score_history_player_score_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAlignment="center"
            android:text="3" />

    </LinearLayout>

</androidx.cardview.widget.CardView>