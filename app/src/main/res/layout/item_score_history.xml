<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginTop="4dp"
    >

    <TextView
        android:id="@+id/tv_match_score_history"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="1."
        android:gravity="center"
        android:background="@color/design_default_color_secondary"
        android:textSize="20dp"
        android:layout_weight="1"/>

    <TextView
        android:id="@+id/tv_player0_score_history"
        android:background="#F3D375"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="0"
        android:textSize="20dp"
        android:textAlignment="center"
        android:layout_weight="1"/>

    <TextView
        android:id="@+id/tv_player1_score_history"
        android:background="#F3D375"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="1"
        android:textSize="20dp"
        android:textAlignment="center"
        android:layout_weight="1"/>

    <TextView
        android:id="@+id/tv_player2_score_history"
        android:background="#F3D375"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="2"
        android:textSize="20dp"
        android:textAlignment="center"
        android:layout_weight="1"/>
    <TextView
        android:id="@+id/tv_player3_score_history"
        android:background="#F3D375"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="3"
        android:textSize="20dp"
        android:textAlignment="center"
        android:layout_weight="1"/>

</LinearLayout>